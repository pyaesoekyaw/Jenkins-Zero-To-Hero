pipeline {
  agent {
    docker {
      image 'pyae5/maven-java17-agent:v1'
      args '--user root -v /var/run/docker.sock:/var/run/docker.sock' // mount Docker socket to access the host's Docker daemon
      alwaysPull true 
    }
  }
  stages {
    stage('Checkout') {
      steps {
        sh 'echo passed'
        //git branch: 'main', url: 'https://github.com/pyaesoekyaw/Jenkins-Zero-To-Hero'
      }
    }
    stage('Build and Test') {
      steps {
        sh 'ls -ltr'
        // build the project and create a JAR file
        sh 'cd java-maven-sonar-argocd-helm-k8s/spring-boot-app && mvn clean package'
      }
    }
    stage('Static Code Analysis') {
      environment {
        SONAR_URL = "http://44.201.205.23:9000/"
      }
      steps {
        withCredentials([string(credentialsId: 'sonarqube', variable: 'SONAR_AUTH_TOKEN')]) {
          sh 'cd java-maven-sonar-argocd-helm-k8s/spring-boot-app && mvn sonar:sonar -Dsonar.login=$SONAR_AUTH_TOKEN -Dsonar.host.url=${SONAR_URL}'
        }
      }
    }
    stage('Build and Push Docker Image') {
      environment {
        DOCKER_IMAGE = "pyae5/ultimate-cicd:${BUILD_NUMBER}"
        REGISTRY_CREDENTIALS = credentials('docker-cred')
      }
      steps {
        script {
            sh '''
                echo "--- Debugging Dockerfile location ---"
                echo "Initial current directory: $(pwd)"

                cd java-maven-sonar-argocd-helm-k8s/spring-boot-app

                echo "Current directory AFTER cd: $(pwd)"
                echo "Listing contents of the current directory (where Dockerfile should be):"
                ls -l Dockerfile # Try to list only the Dockerfile
                ls -l           # List all files/dirs in the current directory
                ls -la          # List all, including hidden files

                echo "--- End Debugging ---"

                docker build -t ${DOCKER_IMAGE} .
            '''
            def dockerImage = docker.image("${DOCKER_IMAGE}")
            docker.withRegistry('https://index.docker.io/v1/', "docker-cred") {
                dockerImage.push()
            }
        }
      }
    }
    stage('Update Deployment File') {
        environment {
            GIT_REPO_NAME = "Jenkins-Zero-To-Hero"
            GIT_USER_NAME = "pyaesoekyaw"
        }
        steps {
            withCredentials([string(credentialsId: 'github', variable: 'GITHUB_TOKEN')]) {
                sh '''
                    cd java-maven-sonar-argocd-helm-k8s/

                    # Diagnostic: Confirm current directory
                    echo "Current directory for git commands: $(pwd)"
                    ls -la .git/ || echo ".git directory not found here." # Check if .git exists

                    git config user.email "pyaesoekyaw1123@gmail.com" # Updated email
                    git config user.name "Pyae Soe Kyaw"             # Updated name

                    BUILD_NUMBER=${BUILD_NUMBER}
                    sed -i "s/replaceImageTag/${BUILD_NUMBER}/g" java-maven-sonar-argocd-helm-k8s/spring-boot-app-manifests/deployment.yml
                    git add java-maven-sonar-argocd-helm-k8s/spring-boot-app-manifests/deployment.yml
                    git commit -m "Update deployment image to version ${BUILD_NUMBER}"
                    git push https://${GITHUB_TOKEN}@github.com/${GIT_USER_NAME}/${GIT_REPO_NAME} HEAD:main
                '''
            }
        }
    }
  }
}
